$autoloader = 'Pirus/Autoload.php';

if (strpos('@php_bin@', '@') === 0) {
    // stand-alone version is running
    $autoloader = dirname(dirname(__FILE__)) . '/' . $autoloader;
} else {
    // PEAR installed version is running
    $autoloader = 'Bartlett/' . $autoloader;
}

require_once $autoloader;

exit(Pirus_CLI::main());
