 <notes>
Additions and changes:
- As Pirum 1.1.4 is not PHP 5.2 compatible, limit installation to version 1.0.5

Bug fixes:
- none
 </notes>
 <contents>
  <dir baseinstalldir="Bartlett" name="/">
   <dir name="Pirus">
    <file baseinstalldir="Bartlett" name="CLI.php" role="php">
     <tasks:replace from="@package_version@" to="version" type="package-info" />
     <tasks:replace from="@cfg_dir@" to="cfg_dir" type="pear-config" />
     <tasks:replace from="@data_dir@" to="data_dir" type="pear-config" />
    </file>
   </dir> <!-- /Pirus -->
   <dir name="scripts">
    <file baseinstalldir="" name="pirus" role="script">
     <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
     <tasks:unixeol />
    </file>
    <file baseinstalldir="" name="pirus.bat" role="script">
     <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
     <tasks:replace from="@bin_dir@" to="bin_dir" type="pear-config" />
     <tasks:windowseol />
    </file>
   </dir> <!-- /scripts -->
   <dir name="templates">
    <dir name="bartlett">
     <file baseinstalldir="Bartlett" name="index.html" role="data" />
     <file baseinstalldir="Bartlett" name="pirum.css" role="data" />
    </dir> <!-- /templates/bartlett -->
    <dir name="default">
     <file baseinstalldir="Bartlett" name="index.html" role="data" />
     <file baseinstalldir="Bartlett" name="pirum.css" role="data" />
    </dir> <!-- /templates/default -->
   </dir> <!-- /templates -->
   <file baseinstalldir="Bartlett" name="LICENSE" role="doc" />
   <file baseinstalldir="" name="pirus.ini.dist" role="cfg" />
   <file baseinstalldir="Bartlett" name="README.markdown" role="doc" />
  </dir> <!-- / -->
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.1.0</min>
   </php>
   <pearinstaller>
    <min>1.9.4</min>
   </pearinstaller>
   <package>
    <name>Console_CommandLine</name>
    <channel>pear.php.net</channel>
    <min>1.1.3</min>
   </package>
   <package>
    <name>Pirum</name>
    <channel>pear.pirum-project.org</channel>
    <min>1.0.5</min>
    <max>1.0.5</max>
   </package>
  </required>
 </dependencies>
 <phprelease>
  <installconditions>
   <os>
    <name>windows</name>
   </os>
  </installconditions>
  <filelist>
   <install as="pirus.bat" name="scripts/pirus.bat" />
   <install as="pirus" name="scripts/pirus" />
  </filelist>
 </phprelease>
 <phprelease>
  <filelist>
   <install as="pirus" name="scripts/pirus" />
   <ignore name="scripts/pirus.bat" />
  </filelist>
 </phprelease>
